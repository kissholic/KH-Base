export module khbase:convert;
import :traits;
import std;


export namespace kh {

// TODO: Expecting more efficient implementation
std::string to_string(double d) {
	return std::to_string(d);
}

template <is_pointer T>
auto convert(is_pointer auto ptr) -> T {
	T result = nullptr;
	std::memcpy(&result, &ptr, sizeof(T*));
	return result;
}

} // namespace kh
