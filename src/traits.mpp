export module khbase:traits;
import std;

export namespace kh {

template <typename T>
class trait_class_member;

template <typename Cls, typename T>
class trait_class_member<T Cls::*> {
public:
	using class_t = Cls;
	using member_t = T;
};

template <typename T>
concept is_pointer = std::is_pointer_v<T>;

} // namespace kh
