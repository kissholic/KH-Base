export module khbase:misc.defer;
import std;

export namespace kh {

class defer {
public:
	defer(std::function<void()> func) : m_func(std::move(func)) {}
	~defer() { m_func(); }

private:
	std::function<void()> m_func;
};

} // namespace kh
